- model_class = @group.class
%h1=@group.name

.member-actions
  - if @membership
    = link_to "Leave group", membership_path(@membership), :method => :delete, :confirm => 'Are you sure?', :class => 'btn'
  - else
    = link_to "Join group", {:controller => "memberships", :action => "create", :group_id => @group.id}, {:method => :post, :class => 'btn'}

- if is_group_admin(@group.id)
  .form-actions
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_group_path(@group), :class => 'btn'
    = link_to t('.destroy', :default => t("helpers.links.destroy")), group_path(@group), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
